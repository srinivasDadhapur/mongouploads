<html>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">    
    <style>
    img {
        height:50%;
        width:100%
    }
    </style>
</head>


<body>
    
<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">
            <h1 class="text-center display-4 my-3">File uploads</h1>
            
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <div class="custom-file mb-3">
                    <input type="file" class="custom-file-input" name="file" id="file">
                    <label for="file" class="custom-file-label">Choose a file to upload</label>
                </div>
                    <input type="submit" value="upload" class='btn btn-primary btn-block'>
                </form>
                <hr>
                <% if(files){ %>
                    <% files.forEach(function(file){%>
                        <div class="card card-body mb-3">
                            <% if(file.isImage){%>
                                <img src="images/<%= file.filename%>" alt="image files">
                            <%}else {%>
                               <p> <%=file.filename%></p>
                            <%}%>
                            <form method="POST" action="/files/<%= file._id%>?_method=DELETE">
                            <button class="btn btn-danger btn-block mt-4">delete</button>
                            </form>
                        </div>
                    <% }) %>
                 <% } else { %>
                    <p>no files to show</p>
                <% } %>
        
        </div>
</div>
</div>
</body>
</html>